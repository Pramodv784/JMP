<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookedPrintActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:id="@+id/llScroll"
            android:orientation="vertical">

            <com.jackandphantom.circularimageview.CircleImage
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@mipmap/app_icon"
                android:layout_height="100dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:divider="@drawable/divider"
    android:showDividers="end"
    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plot Owner Name"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pramod Verma"
                android:id="@+id/username"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider"
                android:showDividers="end">
    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jai Vasanti nagar Indore"
                android:id="@+id/user_address"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider"
            android:showDividers="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number."
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8359968242"
                android:id="@+id/user_mobile"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Paid Amount "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="22dp"
                    android:id="@+id/paid_amount"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:text="5000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Total Amount "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="22dp"
                    android:id="@+id/total_amount"
                    android:layout_marginRight="5dp"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:text="14000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="20dp"
               android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Remaining Amount "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="22dp"
                    android:id="@+id/remaining_amount"
                    android:layout_marginRight="5dp"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:text="14000"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site name"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/site_name"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plotlist"/>
</RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>