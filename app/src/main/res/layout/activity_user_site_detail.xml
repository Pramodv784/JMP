<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/MyMaterialTheme"
    tools:context=".activity.UserSiteDetailActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

<ProgressBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:id="@+id/progressbar"
    />
        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            app:iss_corner_radius="20"
            app:iss_auto_cycle="true"

            android:id="@+id/imageslider"/>
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageslider"
                app:icon="@drawable/call_icon2"
                android:layout_marginRight="20dp"
                app:elevation="1dp"
                app:iconTint="@color/white"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="call"
                app:maxImageSize="64dp"
                app:backgroundTint="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                app:borderWidth="0dp"
                android:layout_marginBottom="-32dp"
                app:pressedTranslationZ="1dp"
                app:fab_colorNormal="#ffffff"
                app:fabCustomSize="40dp"
                android:layout_alignParentRight="true" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_below="@id/imageslider"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mukesh Verma"
        android:id="@+id/owner1"
        android:inputType="textCapSentences"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="17dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Indore"
        android:id="@+id/llocation"
        android:layout_below="@+id/location"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="normal"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="bangali Square"
        android:id="@+id/area1"
        android:layout_below="@+id/location"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textStyle="normal"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="82  manavta nagar"
        android:id="@+id/street"
        android:layout_below="@+id/location"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textStyle="normal"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="600 sqft"
        android:id="@+id/pplot_area"
        android:layout_toRightOf="@id/llocation"
        android:layout_below="@+id/plot_area"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="normal"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5000"
        android:id="@+id/price"
        android:textColor="@color/text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20dp"
        />

   
</LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:id="@+id/relative"
            android:background="@drawable/layout"
            android:layout_height="250dp">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:id="@+id/progressbar2"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary"
                android:indeterminateTintMode="src_atop"
                android:visibility="visible"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/recycle_view"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:id="@+id/linerlayout"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:text="plot no. :"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plotnumber1"
                android:layout_marginLeft="5dp"
                android:textAllCaps="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="25dp"
                android:layout_weight="0.5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plot Size :"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plot_size"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            </LinearLayout>
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Download PDF File "
    android:layout_margin="20dp"
    android:id="@+id/btnfile"
    android:visibility="gone"
    android:textColor="@color/white"
    android:background="@drawable/button2"/>
    </LinearLayout>
    </ScrollView>



</RelativeLayout>