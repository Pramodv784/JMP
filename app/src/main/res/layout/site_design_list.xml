<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative"
            android:layout_margin="5dp">
        <com.jackandphantom.circularimageview.RoundedImage
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/image"
            android:src="@drawable/plotimage3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anile Construction Comp"
                android:textSize="20sp"
                android:ellipsize="end"
                android:lines="1"
                android:id="@+id/name"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/owner2"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Owner Ramesh"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000 Sqr/ft"
                android:textColor="@color/text_color"
                android:textSize="15sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
               >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/pin"
                    android:src="@drawable/pin"/>
                <TextView
                    android:id="@+id/site_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/pin"
                    android:textColor="@color/text_color"
                    android:text="78 indore"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    />
            </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="0.5"
                    android:id="@+id/siteview"
                    android:background="@drawable/button4"
                    android:elevation="5dp"
                    android:text="View Site"
                    android:textColor="@color/white" />


        </LinearLayout>
        </RelativeLayout>


</RelativeLayout>